<!DOCTYPE html>
<html>
<head>
    {% block stylesheets %}
        <link rel="stylesheet" href="{{ asset('vendor/css/bootstrap.min.css') }}" />
        <link rel="stylesheet" href="{{ asset('vendor/css/jasny-bootstrap.min.css') }}" />
        <link rel="stylesheet" href="{{ asset('vendor/css/font-awesome.min.css') }}" />
        <link rel="stylesheet" href="{{ asset('resources/css/main.css') }}" type="text/css" />
    {% endblock %}
    {% block javascripts %}
        <script src="{{ asset('vendor/js/jquery-2.1.4.min.js') }}"></script>
        <script src="{{ asset('vendor/js/bootstrap.min.js') }}"></script>
        <script src="{{ asset('vendor/js/jasny-bootstrap.min.js') }}"></script>
    {% endblock %}
</head>
<body>
    <div class="container">
        {% for flashMessage in app.session.flashbag.get('success') %}
            <div class="alert alert-success alert-fixed-top transparent-80 text-center">
                <button type="button" class="close" data-dismiss="alert"><span>&times;</span></button>
                <strong style="color: #f5f5f5;">{{ flashMessage }}</strong>
            </div>
        {% endfor %}
        {% for flashMessage in app.session.flashbag.get('danger') %}
            <div class="alert alert-success alert-fixed-top transparent-80 text-center">
                <button type="button" class="close" data-dismiss="alert"><span>&times;</span></button>
                <strong style="color: #f5f5f5;">{{ flashMessage }}</strong>
            </div>
        {% endfor %}

        {% block left_nav %}{% endblock %}

        <div class="row">
            <div class="col-md-12">
                <h1 class="page-header text-center">The Game</h1>
            </div>
        </div>

        {% block body %}{% endblock %}

        {% block footer %}
            <footer class="footer">
                <div class="row">
                    <div class="col-md-4">
                        <ul class="list-unstyled">
                            <li><a href="#">Point 1</a></li>
                            <li><a href="#">Point 2</a></li>
                            <li><a href="#">Point 3</a></li>
                            <li><a href="#">Point 4</a></li>
                            <li><a href="#">Point 5</a></li>
                            <li><a href="#">Point 6</a></li>
                        </ul>
                    </div>
                    <div class="col-md-4">
                        <h5><strong>{{ 'Email:' | trans }}</strong> some@email.com</h5>
                        <h5><strong>{{ 'Skype:' | trans }}</strong> some.skype</h5>
                        <h5><strong>{{ 'Adress:' | trans }}</strong> Some country, somewhere, 14</h5>
                        <h5><strong>{{ 'Something:' | trans }}</strong> Something else</h5>
                    </div>
                    <div class="col-md-4">
                        <ul class="list-unstyled">
                            <li><a href="#">Some 1</a></li>
                            <li><a href="#">Some 2</a></li>
                            <li><a href="#">Some 3</a></li>
                            <li><a href="#">Some 4</a></li>
                            <li><a href="#">Some 5</a></li>
                            <li><a href="#">Some 6</a></li>
                        </ul>
                    </div>
                </div>
            </footer>
        {% endblock %}
    </div>
</body>
</html>